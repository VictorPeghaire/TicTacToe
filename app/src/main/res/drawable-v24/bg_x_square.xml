<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/stroke_width" android:color="@color/gray" />
        </shape>
    </item>
    <item
        android:left="4dp"
        android:right="4dp"
        >
        <rotate
            android:fromDegrees="135"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="135">
            <shape android:shape="line">
                <stroke android:width="@dimen/large_stroke_width" android:color="@color/gray" />
            </shape>
        </rotate>
    </item>
    <item
        android:left="4dp"
        android:right="4dp"
        >
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="45">
            <shape android:shape="line">
                <stroke android:width="@dimen/large_stroke_width" android:color="@color/gray" />
            </shape>
        </rotate>
    </item>
</layer-list>
